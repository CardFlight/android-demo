<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:drawable="@color/cardflight_dark_blue" android:state_enabled="true" android:state_pressed="true" />

    <item android:drawable="@color/light_grey" android:state_enabled="false" />

    <item android:drawable="@color/cardflight_blue" android:state_enabled="true" android:state_pressed="false" />
</selector>
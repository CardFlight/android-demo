<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:padding="@dimen/content_padding" >

        <TextView
            android:id="@+id/priceLabel"
            android:layout_width="100dp"
            android:layout_height="@dimen/field_height"
            android:text="@string/price"
            android:gravity="center|left"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/priceEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_height"
            android:layout_toRightOf="@+id/priceLabel"
            android:inputType="numberDecimal"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/descriptionLabel"
            android:layout_width="100dp"
            android:layout_height="@dimen/field_height"
            android:text="Description:"
            android:gravity="center|left"
            android:layout_below="@+id/priceEditText"
            android:textSize="@dimen/text_size"/>

        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_height"
            android:layout_toRightOf="@+id/descriptionLabel"
            android:layout_below="@+id/priceEditText"
            android:textSize="@dimen/text_size"
            />


        <TextView
            android:id="@+id/currencyLabel"
            android:layout_width="100dp"
            android:layout_height="@dimen/field_height"
            android:text="Currency:"
            android:gravity="center|left"
            android:layout_below="@+id/descriptionEditText"
            android:textSize="@dimen/text_size"/>

        <EditText
            android:id="@+id/currencyEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_height"
            android:layout_toRightOf="@+id/descriptionLabel"
            android:layout_below="@+id/descriptionEditText"
            android:textSize="@dimen/text_size"
            />


        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="100dp"
            android:layout_height="@dimen/field_height"
            android:layout_below="@+id/currencyEditText"
            android:gravity="center|left"
            android:text="@string/person_name" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_height"
            android:layout_below="@+id/currencyLabel"
            android:layout_toRightOf="@+id/nameLabel"
            android:enabled="true"
            android:hint="@string/person_name_hint"
            android:inputType="textPersonName"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/cardNumberLabel"
            android:layout_width="100dp"
            android:layout_height="@dimen/field_height"
            android:layout_below="@+id/nameEditText"
            android:text="@string/card_number"
            android:gravity="center|left"
            android:textSize="@dimen/text_size" />

        <com.getcardflight.views.PaymentView
            android:id="@+id/cardEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_height"
            android:layout_below="@+id/cardNumberLabel"/>


        <Button
            android:id="@+id/swipeCardButton"
            android:layout_width="140dp"
            android:layout_height="@dimen/field_height"
            android:layout_below="@+id/cardEditText"
            android:layout_marginTop="@dimen/content_padding"
            android:onClick="launchSwipeEvent"
            android:text="@string/swipe_card"
            android:textSize="13sp" />

        <Button
            android:id="@+id/processPaymentButton"
            android:layout_width="140dp"
            android:layout_height="@dimen/field_height"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/cardEditText"
            android:layout_marginTop="@dimen/content_padding"
            android:onClick="processPayment"
            android:text="@string/process_payment"
            android:textSize="13sp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="@dimen/field_height"
            android:text="Serial Number"
            android:id="@+id/serialNumber"
            android:textSize="13sp"
            android:onClick="displaySerialNumber"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/swipeCardButton"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</ScrollView>
